conky.config = {
	alignment = 'top_right',
	background = false,
	border_width = 1,
	cpu_avg_samples = 2,
	default_color = 'white',
	default_outline_color = 'white',
	default_shade_color = 'white',
	draw_borders = false,
	draw_graph_borders = true,
	draw_outline = false,
	draw_shades = false,
	use_xft = true,
	font = 'DejaVu Sans Mono:size=12',
	gap_x = 25,
	gap_y = 60,
	minimum_height = 5,
	minimum_width = 5,
	net_avg_samples = 2,
	double_buffer = true,
	no_buffers = true,
	out_to_console = false,
	out_to_stderr = false,
	extra_newline = false,
	own_window = true,
	own_window_class = 'Conky',
	own_window_type = 'override',
	own_window_transparent = true,
	stippled_borders = 0,
	update_interval = 1.0,
	uppercase = false,
	use_spacer = 'none',
	show_graph_scale = false,
	show_graph_range = false
}

conky.text = [[
${alignc}${font DejaVu Sans Mono:size=20}$nodename
${alignc}${font DejaVu Sans Mono:size=12}$sysname $kernel on $machine 
$hr
${color grey}Uptime:$color $uptime
${color grey}Frequency (in GHz):$color $freq_g
${color grey}RAM Usage:$color
  $memperc%	${goto 80}${membar}
  ${goto 100}$mem/$memmax
${color grey}Swap Usage:$color
  $swapperc% ${goto 80}${swapbar}
  ${goto 100}$swap/$swapmax
${color grey}CPU Usage:
 ${color grey}Total: $color$cpu% ${goto 135}${cpubar}
  ${color grey}CPU1: $color${cpu cpu0}% ${goto 135}${cpubar cpu0}
  ${color grey}CPU2: $color${cpu cpu1}% ${goto 135}${cpubar cpu1}
  ${color grey}CPU3: $color${cpu cpu2}% ${goto 135}${cpubar cpu2}
  ${color grey}CPU4: $color${cpu cpu3}% ${goto 135}${cpubar cpu3}
  ${color grey}CPU5: $color${cpu cpu3}% ${goto 135}${cpubar cpu4}
  ${color grey}CPU6: $color${cpu cpu3}% ${goto 135}${cpubar cpu5}
  ${color grey}CPU7: $color${cpu cpu3}% ${goto 135}${cpubar cpu6}
  ${color grey}CPU8: $color${cpu cpu3}% ${goto 135}${cpubar cpu7}
  ${color grey}Processes:$color $processes	${color grey}Running:$color $running_processes
$hr
${color grey}File systems:
 root $color ${goto 80}${fs_bar 6 /}
 ${goto 100}${fs_used /}/${fs_size /}
${color grey}
 home $color ${goto 80}${fs_bar 6 /home/mxvl}
 ${goto 100}${fs_used /home/mxvl}/${fs_size /home/mxvl}
${color grey}LAN:
Up:$color ${upspeed enp2s0f1} ${color grey} ${goto 150}- Down:$color ${downspeed enp2s0f1}
${color grey}WLAN:
Up:$color ${upspeed wlp3s0} ${color grey} ${goto 150}- Down:$color ${downspeed wlp3s0}
$hr
${color grey}Name			   PID	 CPU%	MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
]]
